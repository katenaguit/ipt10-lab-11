<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #eef2f3;
            font-family: 'Helvetica Neue', Arial, sans-serif;
            color: #333;
        }
        h1 {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-align: center;
            font-weight: bold;
            color: #2c3e50;
        }
        .table {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: white;
        }
        .table th {
            background-color: #3498db;
            color: white;
            text-transform: uppercase;
            letter-spacing: 0.1rem;
        }
        .table tbody tr {
            transition: background-color 0.3s;
        }
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }
        .no-courses {
            text-align: center;
            color: #7f8c8d;
            padding: 1rem 0;
        }
        .btn {
            border-radius: 20px;
        }
        nav {
            margin-top: 2rem;
            text-align: center;
        }
        .pagination .page-link {
            border-radius: 50%;
            margin: 0 0.3rem;
            background-color: #3498db;
            color: white;
        }
        .pagination .page-link:hover {
            background-color: #2980b9;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <h1>Courses</h1>
        
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Course Name</th>
                    <th>Course Code</th>
                    <th>Enrollees</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{# items }}
                <tr>
                    <td>{{ id }}</td>
                    <td>{{ course_name }}</td>
                    <td>{{ course_code }}</td>
                    <td>{{ number_of_enrolled_students }}</td>
                    <td>
                        <a href="/courses/{{ course_code }}" class="btn btn-primary btn-sm">View Students</a>
                        <a href="/export-course/{{ course_code }}" class="btn btn-secondary btn-sm">Export to PDF</a>
                    </td>
                </tr>
                {{/ items }}
                {{^ items }}
                <tr>
                    <td colspan="5" class="no-courses">No courses available.</td>
                </tr>
                {{/ items }}
            </tbody>
        </table>

        <div class="mt-4 text-center">
            <a href="/enrollment-form" class="btn btn-primary">Enroll a Student</a>
        </div>

        <hr />
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" href="/courses">List of courses</a></li>
                <li class="page-item"><a class="page-link" href="/students">List of students</a></li>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
